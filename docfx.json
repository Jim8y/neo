{
  "metadata": [
    {
      "src": [
        {
          "files": [ "src/**.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml", "toc.yml", "*.md" ],
        "exclude": [ "**/bin/**", "**/obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ]
      }
    ],
    "overwrite": [
      {
        "files": [ "apidoc/**.md" ],
        "exclude": [ "**/bin/**", "**/obj/**" ]
      }
    ],
    "dest": "_site",
    "template": [ "default" ]
  }
}
